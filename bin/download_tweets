#!/usr/bin/env ruby
puts "This program lets you download all the tweets for a given Twitter username."

require 'optparse'
options = {}
OptionParser.new do |opt|
  opt.banner = "Usage: download_tweets -u username"
  opt.on('-u', '--user USERNAME', 'specify username') { |v| options[:user] = v }
  opt.on('-d', '--dir DIRECTORY', 'specify download directory') { |v| options[:directory] = v }
  opt.parse!(ARGV)
end

$:.unshift "#{File.dirname(__FILE__)}/../lib/"
require 'tweet_downloader'
TweetDownloader.new(options[:user], options[:directory]).download_tweets
